{
  "expo": {
    "name": "Reactiv' Translate",
    "slug": "PROJET_Reactiv-translate",
    "privacy": "public",
    "sdkVersion": "36.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow Reactiv' Translate to access your microphone",
        "UIBackgroundModes": [
          "audio"
        ]
      },
    },
    "android": {
      "permissions": [
        "RECORD_AUDIO"
      ]
    }
  }
}
